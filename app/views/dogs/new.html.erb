<h1>Add a furry friend to the family!</h1>

<%= form_tag  dogs_path do%>

    <label>Name:</label><br>
    <%= text_field_tag :'dog[name]' %><br><br>

    <label>Breed:</label><br>
    <%= text_field_tag :'dog[breed]' %><br><br>

    <label>Gender:</label><br>
    <%= text_field_tag :'dog[gender]' %><br><br>

    <label>Age:</label><br>
    <%= number_field_tag :'dog[age]' %><br><br>

    <label>Description:</label><br>
    <%= text_area_tag :'dog[description]' %><br><br>

    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <%= submit_tag "Submit" %>

<% end %>

